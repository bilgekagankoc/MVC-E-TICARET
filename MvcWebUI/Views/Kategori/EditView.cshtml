@model KategoriModel
@{
    ViewData["Title"] = "Kategori Düzenle";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-6 m-4">
        <form method="post" enctype="multipart/form-data" asp-controller="Kategori" asp-action="Edit" asp-route-id="@Model.Id" id=urunDuzenle>
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for=Adi class="form-label"></label>
            <input asp-for="Adi" type="text" class="form-control" id="urunAdi" />
            <span asp-validation-for=Adi class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=Aciklamasi class="form-label"></label>
            <textarea asp-for="Aciklamasi" type="text" class="form-control" id="aciklamasi"></textarea>
            <span asp-validation-for=Aciklamasi class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

